<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet"></head>
    <title>show data</title>
    <style>
        body {
            background-color: rgb(237, 237, 237);
            font-family: "Kanit", sans-serif;
            justify-content: center;
            justify-items: center;
            text-align: center;
        }
        .container {
            padding-top: 50px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table thead th{
            background-color: #94c6ee; 
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item) => { %> 
                <tr>
                    <td><%= item.username %></td>
                    <td><%= item.password %></td>
                    <td><%= item.email %></td>
                    <td><%= item.firstname %></td>
                    <td><%= item.lastname %></td>
                    <td><%= item.age %></td>
                    <td><%= item.address %></td>
                    <td><%= item.phone %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
</body>
</html>
