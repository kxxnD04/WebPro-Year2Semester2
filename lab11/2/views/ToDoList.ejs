<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
   
    <style>
        body {
            background-color: rgb(255, 255, 255);
            justify-content: center;
            justify-items: center;
            text-align: center;
        }
        .container {
            padding-top: 50px;
        }
        table {
            width: 100%;

        }
        table thead th{
            background-color: #a6eab2; 
            color: rgb(0, 0, 0);
            border: 1px solid rgb(0, 0, 0);
        }
        .table.table-bordered td{
            border: 1px solid rgb(0, 0, 0);
        }
        .table.table-bordered th{
            border: 1px solid rgb(0, 0, 0);
        }
        .add_button {
            color: white;
            text-decoration: none;
        }
        .add_button:hover {
            color: white;
            text-decoration: none;
        }
    </style>
    <title>Show todoList</title>
</head>
<body>
    <div class="container">
        <div style="display: flex; align-items: center;">
            <h1 style="margin-right: auto;">ToDos Lists</h1>
            <button class="btn btn-success"><a href="/form" class="add_button">Add ToDo</a></button>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align: left;">ID</th>
                    <th style="text-align: left;">Title</th>
                    <th style="text-align: left;">Deadline</th>
                    <th style="text-align: left;">Completed</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item) => { %> 
                    <tr>
                        <td style="text-align: left;"><%= item.id %></td>
                        <td style="text-align: left;"><%= item.title %></td>
                        <td style="text-align: left;"><%= item.deadline %></td>
                        <td style="text-align: left;">
                            <a href="/toggle/<%= item.id %>" class="text-decoration-none">
                                <input type="checkbox" <%= item.completed ? 'checked' : '' %> onclick="return false;">
                              </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
